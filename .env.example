# ============================================================================
# RUBIX Configuration
# ============================================================================

# Execution Mode: How RUBIX generates code
# - cli-first: Use Claude Code CLI first (Max subscription), fall back to API (default)
# - api-only: Only use Anthropic API (requires ANTHROPIC_API_KEY)
# - cli-only: Only use Claude Code CLI, never use API
RUBIX_EXECUTION_MODE=cli-first

# CLI Model: Which model to use with Claude Code CLI
# - opus: Claude Opus (default, uses Max subscription Opus quota)
# - sonnet: Claude Sonnet
# - haiku: Claude Haiku
RUBIX_CLI_MODEL=opus

# CLI Timeout: How long to wait for CLI execution (ms, default: 5 minutes)
RUBIX_CLI_TIMEOUT=300000

# API Fallback: Only used when CLI quota exhausted or unavailable
# Leave empty to disable API fallback (cli-only behavior)
ANTHROPIC_API_KEY=

# API Model: Claude model for API calls (when using API fallback)
RUBIX_MODEL=claude-opus-4-5-20251101

# Max tokens for code generation
RUBIX_MAX_TOKENS=8192

# Parallel execution - department heads working concurrently
RUBIX_MAX_PARALLEL=5
RUBIX_FAIL_FAST=true

# Ultrathink (Extended Thinking) Configuration
RUBIX_ULTRATHINK=true
RUBIX_THINK_BASE=5000
RUBIX_THINK_INCREMENT=5000
RUBIX_THINK_MAX=16000
RUBIX_THINK_START_ATTEMPT=2

# Legacy aliases (for backwards compatibility)
CODEX_MAX_PARALLEL=5
CODEX_FAIL_FAST=true